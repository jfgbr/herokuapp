<% if model.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(model.errors.count, "error") %>.
    </div>
    <ul class="list-unstyled">
    <% model.errors.full_messages.each do |msg| 
    %>
      <li>* <%= msg 
      %></li>
    <% end
     %>
    </ul>
  </div>
<% end %>