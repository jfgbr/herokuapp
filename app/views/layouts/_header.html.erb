<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
	<div class="container">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<%= link_to full_title(""), root_path, id: "logo", class:"navbar-brand" %>
		</div>

		<div class="navbar-collapse collapse">
			<ul class="nav navbar-nav">
				<li class="<%= is_active?(root_path) %>">
					<%= link_to "Home", root_path %>
				</li>
				<li class="<%= is_active?(about_path) %>">
					<%= link_to "About",   about_path %>
				</li>
     			<li class="<%= is_active?(contact_path) %>">
     				<%= link_to "Contact", contact_path %>
     			</li>
			<% if signed_in? %>
			</ul>
			<ul class="nav navbar-nav navbar-right">
				<li class="<%= is_active?(users_path) %>">
					<%= link_to "Users", users_path %>
				</li>
				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown">Account <b class="caret"></b></a>
					<ul class="dropdown-menu">
						<li class="<%= is_active?(current_user) %>">
							<%= link_to "Profile", current_user %>
						</li>
						<li class="<%= is_active?(edit_user_path(current_user)) %>">
							<%= link_to "Settings", edit_user_path(current_user) %>
						</li>
						<li class="divider"></li>
						<li>
							<%= link_to "Sign out", signout_path, method: "delete" %>
						</li>
					</ul>
				</li>
			</ul>
			<% else %>
			</ul>
			<ul class="nav navbar-nav navbar-right">
				<li>
					<%= form_for(:session, url: sessions_path ,:html => {:class => 'navbar-form navbar-right', 'role' => 'form'}) do |f| %>
						<div class="form-group form-group-xs">
							<%= f.label :email, class: "sr-only" %>
							<%= f.text_field :email, autofocus: true, placeholder: "E-mail", class: "form-control input-xs" %>
						</div>
			
						<div class="form-group form-group-xs">
							<%= f.label :password, class: "sr-only" %>
							<%= f.password_field :password, placeholder: "Password", class: "form-control input-xs" %>
						</div>
						<div class="form-group form-group-xs">
							<%= f.submit "Sign in", class: "btn btn-success btn-xs", style: "margin-right:10px;"%>
						</div>
						
					<% end %>
				</li>
				<li class="<%= is_active?(signup_path) %>">
					<%= link_to "Sign up now!", signup_path %>
				</li>
				
			</ul>
				
			<% end %>
		</div><!--/.navbar-collapse -->
	</div>
</div>